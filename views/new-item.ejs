<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zoo Management System | Create Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>

    <link rel="stylesheet" href="/output.css" />

    <link rel="icon" type="image/jpg" href="/img/tiger.jpg" />
    <style>
        .required::after {
            content: "*";
            color: red;
            margin-left: 5px;
        }
    </style>
</head>
<body class="bg-gradient-to-r from-yellow-200 via-orange-200 to-red-300">
    <div class="container mt-5">
        <h1 class="text-center text-5xl font-bold text-orange-900 mb-4">Zoo Management System</h1>  
        <h2 class="text-center text-4xl font-bold text-purple-950">(Add Item Form)</h2>

        <form action="/items/create-item" method="post" onsubmit="return addPopUp(event)">
            <div class="form-group mb-3">
                <label for="name" class="required required text-black text-2xl font-bold">Name</label>
                <input type="text" class="form-control border-2 border-black" id="name" name="name" required/>
            </div>

            <div class="form-group mb-3">
                <label for="category" class="required required text-black text-2xl font-bold">Category</label>
                <input type="text" class="form-control border-2 border-black" id="category" name="category" required/>
            </div>

            <div class="form-group mb-3">
                <label for="quantity" class="form-group mb-3 text-black text-2xl font-bold">Quantity</label>
                <input type="number" class="form-control border-2 border-black" id="quantity" name="quantity" min="0"/>
            </div>

            <div>
                <label for="price" class="required form-group mb-3 text-black text-2xl font-bold">Price</label>
                <input type="number" class="form-control border-2 border-black" id="price" name="price" required/>
            </div><br>

            <div class="form-group mb-3">
                <label for="description" class="form-group mb-3 text-black text-2xl font-bold">Description</label>
                <input type="text" class="form-control border-2 border-black" id="description" name="description"/>
            </div>
                
                
            <a href="/items" class="float-right border-2 border-black px-3 py-2 rounded-full bg-gray-400 
            hover:bg-gray-500 active:bg-gray-600 active:text-white mb-2 mr-2">Cancel</a>
            <button type="submit" class="float-right text-black bg-orange-300 hover:bg-orange-400 active:bg-orange-500
            border-double border-gray-900 border-2 p-2 rounded-full mb-2 mr-2 px-3">Update</button>
            
        </form>
    </div>

    <script>
        // window.alert  message when the form is submitted
        function addPopUp(event) {
            const form = event.target   ; // Getting the form element
            const name = form.querySelector("#name").value; // Retrieving the item's name
    
            // Show success alert
            window.alert(`Item created successfully: [${name}]`);
    
            // Allow the form submission to proceed
            return true;
        }
    
        // This will execute after the page refreshes
        if (window.location.href.includes("added=true")) {
            const itemName = new URLSearchParams(window.location.search).get("itemName");
            if (itemName) {
                window.alert(`Item [${itemName}] added successfully.`);
            }
        }
    </script>
    
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>