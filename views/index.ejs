<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of all users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>
</head>
<body>
    <div class="container mt-5">
        <h1>User Management System</h1>
        <div class="d-flex justify-content-between-align-items-center mb-4">
            <h2>List of Users</h2>
            <a href="/users/new" class="btn btn-primary">Add user</a>
        </div>


        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email Address</th>
                    <th>Active</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => {%>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user._id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.emailAddress %></td>
                        <td> <% user.isActive === true? "Yes" : "No" %></td>
                        <% const date = new Date(user.createdAt); %>
                        <% const formattedDate = `${date.getMonth() + 1}/${date.getMonth()}/${date.getFullYear()}`; %>
                        <td><%= formattedDate %></td>
                        <td>
                            <a href="" class="btn btn-sm btn-info text-white">View</a>
                            <a href="" class="btn btn-sm btn-warning text-dark">Update</a>
                            <a href="" class="btn btn-sm btn-danger text-dark">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>